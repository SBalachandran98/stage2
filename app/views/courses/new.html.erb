<% provide(:title, 'Add a Course') %>
<h1>Add Course</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@course, url: addnew_path) do |f| %>
      <%= render 'shared/cor_error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :prerequisite %>
      <%= f.text_field :prerequisite, class: 'form-control' %>

      <%= f.label :category %>
      <%= f.text_field :category, class: 'form-control' %>

      <%= f.label :location %>
      <%= f.text_field :location, class: 'form-control' %>

      <%= f.submit "Add Course", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>